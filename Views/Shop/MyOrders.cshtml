@model IEnumerable<LostCampStore.Models.ViewModels.Shop.OrderVM>

@{
    ViewBag.Title = "MyOrders";
}

<h2>Мои заказы</h2>


<table class="table">
    <tr>
        <th>
            Номер заказа
        </th>
        
        <th>
            Дата
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @*@Html.ActionLink("Детали", "Details", new { /* id=item.PrimaryKey */ })*@
            <a href="/cart/myorderdet/@item.OrderId" class="btn btn-secondary">Подробнее</a>
        </td>
    </tr>
}

</table>
